{
  "manifest_version": 3,
  "name": "IDentified - Track Scraper",
  "version": "2.1",
  "description": "Scrape tracks and artists from Beatport, SoundCloud, and 1001Tracklists for the IDentified app",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "*://www.1001tracklists.com/*",
    "*://www.beatport.com/*",
    "*://beatport.com/*",
    "*://soundcloud.com/*",
    "*://www.soundcloud.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.1001tracklists.com/tracklist/*"],
      "js": ["extractors/1001tracklists.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "*://www.beatport.com/*",
        "*://beatport.com/*"
      ],
      "js": ["extractors/beatport.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "*://soundcloud.com/*",
        "*://www.soundcloud.com/*"
      ],
      "js": ["extractors/soundcloud.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
